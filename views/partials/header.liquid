<body>

    <nav class="nav-bar">
        <button class="hamburger-menu" id="toggle-menu" aria-label="Toggle menu">
            {% render 'partials/hamburger.liquid' %}
        </button>

        <ul class="nav-links" id="nav-links">
            <li><a href="#">Kopen</a></li>
            <li><a href="#">Huren</a></li>
            <li><a href="#">Verkopen</a></li>
        </ul>

        <a href="https://www.funda.nl/">
            {% render 'partials/logo.liquid' %}
        </a>

        <ul class="hidden-nav-links">
            <li>
                <a href="#">Kopen</a>
                <a href="#">Huren</a>
                <a href="#">Verkopen</a>
            </li>
        </ul>

        <div class="nav-buttons">
            <a href="https://www.funda.nl/mijn-huis/toevoegen/">
                {% render 'partials/mijn-huis.liquid' %}
            </a>

            <a href="https://www.funda.nl/favorieten/">
